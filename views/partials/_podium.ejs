<div id="podium" ></div>
<script>
	const podium = (teams) => {
		return `<div class="podium">
			<div class="podium-col second">
					<div class="podium-label">
						${teams[1] ? teams[1].name : ""}
					</div>
				<div class="podium-rect">
					2
				</div>
			</div>
			<div class="podium-col first">
				<span class="material-icons animated zoomIn star">star</span>
					<div class="podium-label">
						${teams[0] ? teams[0].name : ""}
					</div>
				<div class="podium-rect">
					1
				</div>
			</div>
			<div class="podium-col third">
					<div class="podium-label">
						${teams[2] ? teams[2].name : ""}
					</div>
				<div class="podium-rect">
					3
				</div>
			</div>
		</div>`;
	}
</script>